<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UsingPageDialogService.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Button Text="Display Alert" Command="{Binding DisplayAlertCommand}"/>
        <Button Text="Display ActionSheet" Command="{Binding DisplayActionSheetCommand}" />
        <Button Text="Display ActionSheet using ActionSheetButtons" Command="{Binding DisplayActionSheetUsingActionSheetButtonsCommand}" />
    </StackLayout>

</ContentPage>